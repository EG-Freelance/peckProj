<h2><%= t "devise.invitations.new.header" %></h2>

<%= simple_form_for resource, as: resource_name, url: users_invitation_new_path(resource_name), html: { method: :post, :class => 'form-style-10', :id => 'invite-user' } do |f| %>
  <%= devise_error_messages! %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <%= f.input field %>
  <% end -%>

  <%= f.hidden_field :registry, :value => @registry.id %>

  <%= f.button :submit, t("devise.invitations.new.submit_button") %>
<% end %>
