var removeClass = $('#add-remove-button-<%= @product.id %>').attr('class');
var addClass = ''
var htmlText = ''
if(removeClass === 'btn-add-product'){
  addClass = 'btn-remove-product';
  htmlText = 'Remove from Registry';
}else{
  addClass = 'btn-add-product';
  htmlText = 'Add to Registry';
}

console.log('checkpoint');
$('#add-remove-button-<%= @product.id %>').addClass(addClass).removeClass(removeClass).val(htmlText);

