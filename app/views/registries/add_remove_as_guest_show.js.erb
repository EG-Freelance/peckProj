<% if @ur_status == "added" %>
  $('#js-notice').removeClass().addClass('js-success js-notice').text("Registry added under guest listings").stop().fadeTo(1,100).fadeTo(4000,0);
  $("#add-remove-<%= @ur_r %>").html("<i>Leave this registry as a guest</i>");
<% else %>
  $('#js-notice').removeClass().addClass('js-success js-notice').text("Registry removed from guest listings").stop().fadeTo(1,1).fadeTo(4000,0);
  $("#add-remove-<%= @ur_r %>").html("<i>Become a guest of this registry</i>");
<% end %>

$('#reg-accordion').html("<%= j (render partial: 'registries/registry_listings') %>");