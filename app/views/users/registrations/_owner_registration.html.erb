<%= simple_form_for(:user, :url => registration_path(:user), class: 'navbar-form navbar-right loginBar') do |f| %>
  <table width='100%', id='owner-reg-form'>
    <!-- Email address -->
    <tr>
      <td colspan=2 style="padding-bottom:10px"><%= f.text_field :email, placeholder: 'Email address', class: 'textfield input login', id: 'owner-email', value: (current_user.email if user_signed_in? && current_user.owner?) %></td>
    </tr>
    <!-- Password -->
    <tr>
      <td colspan=2 style="padding-bottom:10px"><%= f.password_field :password, placeholder: 'Password', class: 'textfield input login', id: 'owner-password' %></td>
    </tr>
    <!-- Confirm password -->
    <tr>
      <td colspan=2 style="padding-bottom:10px"><%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'textfield input login', id: 'owner-confirm-password' %></td>
    </tr>
    <!-- Preferred payment method -->
    <tr>
      <td width=200px>Preferred payment method</td>
      <td style="padding-bottom:10px"><%= f.select :preferred_payment, options_for_select(["Paypal", "Venmo"], selected: (user_signed_in? && current_user.owner? ? current_user.preferred_payment : "Paypal")), {}, id: 'owner-preferred-payment', class: 'textfield input login select' %></td>
    </tr>
    <!-- Paypal account -->
    <tr>
      <td colspan=2 style="padding-bottom:10px"><%= f.text_field :paypal_acct, placeholder: 'Paypal account', class: 'textfield input login', id: 'owner-paypal-acct', value: (current_user.paypal_acct if user_signed_in? && current_user.owner?) %></td>
    </tr>
    <!-- Venmo account -->
    <tr>
      <td colspan=2 style="padding-bottom:10px"><%= f.text_field :venmo_acct, placeholder: 'Venmo account', class: 'textfield input login', id: 'owner-venmo-acct', value: (current_user.venmo_acct if user_signed_in? && current_user.owner?) %></td>
    </tr>
    <tr>
      <td colspan=2 style="padding-top:10px"></td>
    </tr>
    <tr>
      <td><%= f.submit 'Sign up!', { :class => 'btn btn-login match-input disabled', :id => "owner-signup" } %></td>
    </tr>
  </table>
<% end %>