$('.form-wrapper').each(function(){ 
  $(this).children('.required').css("background-color","#DCDAD1").css("color","darkgray").prop('disabled', true);
});

function disableField(){
  $('.confirmation-checkbox').click(function(){ 
    if($(this).prop('checked') === false){
      $(this).siblings('.required').css("background-color","#DCDAD1").css("color","darkgray").prop('disabled',true);
    }else{
      $(this).siblings('.required').css("background-color","white").css("color","black").prop('disabled',false);
    }
  });
}

$(document).on('page:load', disableField);
$(document).ready(disableField);